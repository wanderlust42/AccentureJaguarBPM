<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://dealBrowse.caption"
        focusComponent="dealsTable">
    <data readOnly="true">
        <collection id="dealsDc"
                    class="com.company.accenturejaguarbpm.entity.Deal">
            <fetchPlan extends="_base">
                <property name="customer" fetchPlan="_base"/>
                <property name="catalogue" fetchPlan="_base"/>
                <property name="testDrive" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="dealsDl">
                <query>
                    <![CDATA[select e from Deal e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dealsTable" spacing="true">
        <filter id="filter"
                dataLoader="dealsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="dealsTable"
                    width="100%"
                    dataContainer="dealsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="customer"/>
                <column id="catalogue"/>
                <column id="mature"/>
                <column id="projectedResult"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="dealsTable.create"/>
                <button id="editBtn" action="dealsTable.edit"/>
                <button id="removeBtn" action="dealsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
