<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://catalogueBrowse.caption"
        focusComponent="cataloguesTable">
    <data readOnly="true">
        <collection id="cataloguesDc"
                    class="com.company.accenturejaguarbpm.entity.Catalogue">
            <fetchPlan extends="_base"/>
            <loader id="cataloguesDl">
                <query>
                    <![CDATA[select e from Catalogue e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="cataloguesTable" spacing="true">
        <filter id="filter"
                dataLoader="cataloguesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="cataloguesTable"
                    width="100%"
                    dataContainer="cataloguesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="model"/>
                <column id="year"/>
                <column id="vcode"/>
                <column id="engine"/>
                <column id="fuel"/>
                <column id="price"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="cataloguesTable.create"/>
                <button id="editBtn" action="cataloguesTable.edit"/>
                <button id="removeBtn" action="cataloguesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
